@page
@model System_Zarz.Pages.Vehicles.CreateModel
@{
    ViewData["Title"] = "Dodaj pojazd";
}

<h2>Dodaj pojazd</h2>

<!-- WYŚWIETLANIE BŁĘDÓW GLOBALNYCH -->
<div asp-validation-summary="All" class="alert alert-danger"></div>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Vehicle.CustomerId" class="control-label">Klient</label>
        <select asp-for="Vehicle.CustomerId" asp-items="Model.CustomersList" class="form-control" required>
            <option value="">-- Wybierz klienta --</option>
        </select>
        <span asp-validation-for="Vehicle.CustomerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Vehicle.VIN"></label>
        <input asp-for="Vehicle.VIN" class="form-control" required/>
        <span asp-validation-for="Vehicle.VIN" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Vehicle.RegistrationNumber"></label>
        <input asp-for="Vehicle.RegistrationNumber" class="form-control" required/>
        <span asp-validation-for="Vehicle.RegistrationNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="UploadPhoto">Zdjęcie pojazdu (opcjonalnie)</label>
        <input type="file" asp-for="UploadPhoto" class="form-control" accept="image/*"/>
        <span asp-validation-for="UploadPhoto" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Dodaj</button>
    <a asp-page="Index" class="btn btn-secondary mt-3">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
