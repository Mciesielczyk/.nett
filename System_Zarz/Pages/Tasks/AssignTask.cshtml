@page
@model AssignTasksModel
@{
    ViewData["Title"] = "Przypisz czynności do zlecenia";
}

<h1>Przypisz czynności do zlecenia</h1>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post">
    <div class="form-group">
        <label for="OrderId">Zlecenie</label>
        <select asp-for="OrderId" asp-items="Model.Orders" class="form-control">
            <option value="">-- Wybierz zlecenie --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="SelectedTaskIds">Czynności</label>
        <select asp-for="SelectedTaskIds" asp-items="Model.AllTasks" class="form-control" multiple></select>
    </div>

    <button type="submit" class="btn btn-success">Przypisz</button>
</form>
