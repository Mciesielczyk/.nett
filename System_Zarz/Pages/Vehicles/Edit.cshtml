@page
@model System_Zarz.Pages.Vehicles.EditModel
@{
    ViewData["Title"] = "Edytuj pojazd";
}

<h2>Edytuj pojazd</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Vehicle.Id" />
    <div class="form-group">
        <label asp-for="Vehicle.VIN"></label>
        <input asp-for="Vehicle.VIN" class="form-control" />
        <span asp-validation-for="Vehicle.VIN" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Vehicle.RegistrationNumber"></label>
        <input asp-for="Vehicle.RegistrationNumber" class="form-control" />
        <span asp-validation-for="Vehicle.RegistrationNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="UploadPhoto">Zdjęcie pojazdu (opcjonalnie)</label>
        <input type="file" asp-for="UploadPhoto" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="Vehicle.CustomerId" class="control-label">Klient</label>
        <select asp-for="Vehicle.CustomerId" asp-items="Model.CustomersList" class="form-control" required>
            <option value="">-- Wybierz klienta --</option>
        </select>
        <span asp-validation-for="Vehicle.CustomerId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Zapisz</button>
    <a asp-page="Index" class="btn btn-secondary mt-3">Anuluj</a>
    
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
