@page
@model System_Zarz.Pages.Vehicles.IndexModel
@{
    ViewData["Title"] = "Lista pojazdów";
}

<h2>Lista pojazdów</h2>

<a asp-page="Create" class="btn btn-primary mb-3">Dodaj pojazd</a>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>VIN</th>
        <th>Rejestracja</th>
        <th>Klient</th>
        <th>Zdjęcie</th>
        <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var vehicle in Model.Vehicles)
    {
        <tr>
            <td>@vehicle.VIN</td>
            <td>@vehicle.RegistrationNumber</td>
            <td>@vehicle.Customer?.FullName</td>
            <td>
                @if (!string.IsNullOrEmpty(vehicle.ImagePath))
                {
                    <img src="~/uploads/@vehicle.ImagePath" alt="Zdjęcie" style="max-height: 60px;" />
                }
            </td>
            <td>
                <a asp-page="Edit" asp-route-id="@vehicle.Id" class="btn btn-sm btn-warning">Edytuj</a>
                <a asp-page="Delete" asp-route-id="@vehicle.Id" class="btn btn-sm btn-danger">Usuń</a>
                <a asp-page="Details" asp-route-id="@vehicle.Id" class="btn btn-sm btn-info">Szczegóły</a>
            </td>
        </tr>

    }
    </tbody>
</table>
<a asp-page="/Account/Profile" class="btn btn-secondary mt-3">Powrót</a>
