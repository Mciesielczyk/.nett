@model System_Zarz.Data.Customer
@{
    ViewData["Title"] = "Szczegóły klienta";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Szczegóły klienta</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Pełne imię:</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Telefon:</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>
                    </dl>
                </div>
            </div>
            <div class="mt-3">
                <a href="/Customers" class="btn btn-secondary">← Powrót do listy</a>
            </div>
        </div>
    </div>
</div> 