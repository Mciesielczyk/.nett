@model System_Zarz.Data.Customer
@{
    ViewData["Title"] = "Usuń klienta";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Usuń klienta</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h4 class="alert-heading">Uwaga!</h4>
                <p>Czy na pewno chcesz usunąć tego klienta? Tej operacji nie można cofnąć.</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Pełne imię:</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Telefon:</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mt-3">
                    <button type="submit" class="btn btn-danger">Usuń</button>
                    <a href="/Customers" class="btn btn-secondary">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div> 