@model List<System_Zarz.Data.Customer>
@{
    ViewData["Title"] = "Lista klientów";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Lista klientów</h2>
            <a asp-action="Create" class="btn btn-light">Dodaj nowego klienta</a>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Pełne imię</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th>Akcje</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.Id</td>
                        <td>@customer.FullName</td>
                        <td>@customer.Email</td>
                        <td>@customer.Phone</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-info btn-sm">Szczegóły</a>
                                <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-warning btn-sm">Edytuj</a>
                                <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-danger btn-sm">Usuń</a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
            <div class="mt-3">
                <a href="/Account/Profile" class="btn btn-secondary">← Powrót do menu</a>
            </div>
        </div>
    </div>
</div> 